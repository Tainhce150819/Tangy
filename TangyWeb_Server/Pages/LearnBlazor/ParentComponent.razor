@page "/learnBlazor/parentComponent"
<h3>Parent Child Relation</h3>

<CascadingValue Value="MessageForGrandChild" Name="message">
    <CascadingValue Value="@LuckyNumber" Name="luckyNumber">
        <_ChildComponent @ref="childComponent" OnButtonClick="ShowMessage" Title="this is title">
    <ChildContent>
        Render Parent
    </ChildContent>
</_ChildComponent>
    </CascadingValue>
</CascadingValue>
<p>@messageText</p>
<_AnotherChildComponent placeholder="Placehoder from parent"></_AnotherChildComponent>


<div class="row">
    <button class="btn btn-primary" @onclick="()=>childComponent.SweetAlertSuccess()">Sweet</button>
</div>
@code {
    private _ChildComponent childComponent;
    public string MessageForGrandChild = "message from your grand parent(ParentComponent)";
    public string LuckyNumber = "7";
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Tangy button clicked from Child Components";
    }
}
